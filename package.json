{
  "name": "showlit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run prebuild && tsc -b && vite build",
    "prebuild": "npm-run-all --parallel generate:articles fetch:repos extract:publications generate:data",
    "build:manual": "npm run prebuild:manual && tsc -b && vite build",
    "prebuild:manual": "npm-run-all --parallel generate:articles fetch:repos extract:publications",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "deploy:clean": "rm -rf node_modules/.cache/gh-pages/ && npm run deploy",
    "deploy:manual": "npm run build:manual && gh-pages -d dist",
    "deploy:dev": "npm run build:manual && gh-pages -d dist",
    "fetch:repos": "node scripts/fetchRepos.js",
    "generate:articles": "node scripts/generateArticlesJson.js",
    "extract:publications": "node scripts/extractFeaturedPublications.js",
    "generate:data": "node scripts/generateData.js config/site.yaml config/profile.yaml"
  },
  "dependencies": {
    "@giscus/react": "^3.1.0",
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-collapsible": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.6",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.553.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.6.0",
    "rehype-raw": "^7.0.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^5.1.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "tw-animate-css": "^1.3.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^7.2.2"
  }
}
